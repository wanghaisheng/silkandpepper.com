---
import Layout from '../layouts/Layout.astro';
import BookingFormVertical from '../components/BookingFormVertical.astro';
import data from '../data/sitecontent.json';
---

    <Layout title="Prince Collection | Book Your Hotel" description="Prince Collection booking services">
        <div class="container-fluid px-0 pt-3 bg-pc-dark bg-gold-1 text-light">
			<div class="row min-vh-100">
				<div class="col-lg-8 offset-lg-2 d-flex flex-column justify-content-center align-items-center min-vh-50 text-center px-5 pt-5 pb-3 mt-4 mt-lg-0">
                    <span class="badge rounded-pill fw-bold text-bg-dark py-2 px-3">{data.booking.badge}</span>
					<h1 class="display-4 fw-bold text-pc lh-1 mb-2 mt-3">{data.booking.title}</h1>
					<p class="col-md-8 fs-5 my-3">{data.booking.content}</p>
				</div>
                <div class="container px-0 px-lg-5">
                    <div class="row px-5 pb-5">
                        <div class="col-lg-8 offset-lg-2 d-flex flex-column justify-content-center align-items-start">
                            <BookingFormVertical bookingForm="bg-pc-dark-80 p-5 rounded-5 shadow" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Layout>

